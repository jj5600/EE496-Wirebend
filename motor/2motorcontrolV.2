    //SAME but oppposite 

    digitalWrite(stepMotorAE, HIGH);
    digitalWrite(stepMotorAP, HIGH);

    delayMicroseconds(pd);
    digitalWrite(stepMotorAE,LOW);
    digitalWrite(stepMotorAP,LOW);

    delayMicroseconds(pd);
  }
  
 
}
 

